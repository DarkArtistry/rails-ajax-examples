<!-- This is a template/partial for rendering an item in detail (i.e what might have been a show page) -->
<div class="row">
  <div class="col s12 m6">
    <div class="card darken-1">
      <div class="card-content">
        <span class="card-title"><%= thing.name %></span>
        <p><%= thing.description %></p>
      </div>
      <div class="card-action">
        <%= link_to 'Edit', edit_thing_path(thing), remote: true %>
        <%= link_to 'Destroy', thing, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
</div>
